<h1><%=current_user.username%>'s Secrets</h1>
<p></p>
<%= link_to "<button>Add New Secret!</button>".html_safe, new_user_secret_path(current_user)%>
<p></p>
  <% if @secrets.length != 0%> 
    <%@secrets.each do |s|%>
      <div>
        <%= link_to "Title: #{s.title}", user_secret_path(current_user, s)%></p>
      </div>

      <div>
        <p> <b>Description:</b> <%= s.description%></p>
      </div>

      <div>
        <p>  <%= s.created_at%></p>
      </div>
      <div>
        <%= link_to "<button>Edit Secret!</button>".html_safe, edit_user_secret_path(current_user, s), class: "btn"%>
      </div>
      <div>
        <%= link_to "<button>Delete Secret!</button>".html_safe, user_secret_path(current_user, s), method: :delete, data: {confirm: "Are your sure you want to delete this secret?"}%>
      </div>
      <br>
      <br>
    <% end %>
  <% else %>
    <h2> You have no secrets. Try adding some by clicking the link above!</h2>
  <% end %>





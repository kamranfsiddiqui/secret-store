<h1><%=current_user.username%>'s Secrets</h1>
<p></p>
<%= link_to "Add New Secret!", new_user_secret_path(current_user)%>
<p></p>
<% if @secrets.length != 0%> 
  <%if @allowed%>
    <%@secrets.each do |s|%>
      <div>
        <p> <b>Title:</b> <%= s.title%></p>
      </div>

      <div>
        <p> <b>Description:</b> <%= s.description%></p>
      </div>

      <div>
        <p>  <%= s.created_at%></p>
      </div>
      <div>
        <%= link_to "Edit Secret!", edit_user_secret_path(current_user, s)%>
      </div>
      <div>
        <%= link_to "Delete Secret!", user_secret_path(current_user, s), method: :delete, data: {confirm: "Are your sure you want to delete this secret?"}%>
      </div>
      <br>
      <br>
    <% end %>
  <% end %>
<% else %>
  <h2> You have no secrets. Try adding some by clicking the link above!</h2>
<% end %>




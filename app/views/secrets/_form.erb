  <div>
    <%= form_for([@user, @secret], :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
          <%= f.label :Title %>
          <%= f.text_field :title, autofocus: true %>
      </div>
      <div class="form-group">
          <%= f.label :Description %>
          <%= f.text_area :description, rows: 10, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= link_to "Cancel", user_path(@user), class: "btn btn-danger btn-lg"%>
          <p></p>
            <%= f.submit "Save edits"%>
      </div>
    <% end %>
  </div>

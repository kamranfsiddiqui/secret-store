<h1><%=@user.username%>'s Secrets</h1>
<p></p>

<% if !@secrets.blank?%>
  <% if @allowed %>
    <% @secrets.each do |s|%>
  
      <div>
        <h4> Title: <%= s.title%></h4>
      </div>
  
      <div>
        <h4> <%= s.description%> </h4>
      </div>
    <% end %>
  <% end %>
<%else%>
  <h4> You have not added any secrets yet! </h4>
<% end %>

<%= link_to "", new_user_secret_path(@user)%>

 
